# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Google Gemini API Configuration (REQUIRED)
GEMINI_API_KEY=your_google_gemini_api_key_here

# OpenAI API Configuration (REQUIRED)
OPEN_AI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info

# Image Processing Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp,image/gif,image/bmp,image/tiff

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Receipt Processing Configuration
RECEIPT_PROCESSING_TIMEOUT=30000
RECEIPT_PROCESSING_RETRIES=3
